{
  "name": "carrier-helper",
  "version": "1.0.0",
  "description": "Track mail carrier shifts with ease",
  "main": "js/app.js",
  "scripts": {
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "test:verbose": "jest --coverage --verbose",
    "lint": "npm run lint:js && npm run lint:md",
    "lint:js": "eslint js/ tests/",
    "lint:md": "markdownlint \"**/*.md\" --ignore node_modules"
  },
  "keywords": [
    "time-tracking",
    "mail-carrier",
    "shift-tracking"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "eslint": "^8.57.1",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "markdownlint-cli": "^0.47.0"
  },
  "overrides": {
    "markdownlint-cli": {
      "minimatch": "^10.2.1"
    }
  },
  "jest": {
    "testEnvironment": "jsdom",
    "collectCoverageFrom": [
      "js/**/*.js",
      "!js/firebase-config.js"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ],
    "moduleFileExtensions": [
      "js"
    ],
    "testMatch": [
      "**/tests/**/*.test.js"
    ],
    "setupFilesAfterEnv": [
      "./tests/setup.js"
    ]
  }
}
